[
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  {
    "label": "Python: Web App",
    "adapter": "debugpy",
    "request": "launch",
    "module": "uvicorn",
    "justMyCode": false,
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": [
      "{{github_repo_name}}.app:app",
      "--reload",
      "--log-level=debug",
      "--port=80"
    ]
  },
  {
    "label": "Python: CLI",
    "adapter": "debugpy",
    "request": "launch",
    "module": "uv",
    "justMyCode": false,
    "args": ["run", "{{github_repo_name}}"]
  }
]
