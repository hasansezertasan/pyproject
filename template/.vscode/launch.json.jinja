  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Web App",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "justMyCode": false,
      "args": [
        "{{github_repo_name}}.app:app",
        "--reload",
        "--log-level=debug",
        "--port=80"
      ]
    },
    {
      "name": "Python: CLI",
      "type": "debugpy",
      "request": "launch",
      "justMyCode": true,
      "module": "uv",
      "args": ["run", "{{github_repo_name}}", "${input:args}"]
    }
  ],
  "inputs": [
    {
      "id": "args",
      "type": "promptString",
      "default": "version",
      "description": "Arguments"
    }
  ]
}
